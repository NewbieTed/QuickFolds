<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.quickfolds.backend.geometry.mapper.StepTypeMapper">

    <!-- Retrieves the ID of a step type based on its name.
         Limits the result to 1 in case of duplicates. -->
    <select id="getIdByName">
        SELECT id
        FROM step_type
        WHERE step_type_name = #{stepTypeName}
        LIMIT 1
    </select>

</mapper>